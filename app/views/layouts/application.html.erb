


<!DOCTYPE HTML<!
<html>
<head>
<meta charset="utf-8">
<title>Create a Parralax Website using Stellar.js</title>
<%= stylesheet_link_tag 'style' %>

<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>

<script type="text/javascript">
   
    $(document).ready(function(){
		$('#form_menu div').hide();

		$('#form_menu ul li a').click(function(){
			$('#form_menu ul li').removeClass('active');
				$(this).parent().addClass('active');
					var currentTab = $(this).attr('href');
			$('#form_menu div').hide();
			$(currentTab).show();
			return false;
		});
		
		$('body').click(function(){
		if($(':focus').prop("tagName") != 'INPUT'){
		$('#form_menu ul li').removeClass('active');
			$('#form_menu div').hide();
			//alert($(':focus').prop("tagName"));
		}
		
			
		});
	});
	

</script>
</head>

	<body id="mainbody">

		<%=yield%>
		
	</body>
	
</html>


